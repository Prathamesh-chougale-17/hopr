{
  "name": "@hopr/cli-core",
  "version": "0.1.0",
  "type": "module",
  "description": "Core utilities and framework detection for hopr CLI",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./detectors": {
      "types": "./dist/detectors/index.d.ts",
      "import": "./dist/detectors/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
