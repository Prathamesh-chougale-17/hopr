{
  "name": "hopr",
  "version": "0.1.2",
  "type": "module",
  "private": false,
  "description": "CLI tool for migrating fullstack web projects between frameworks",
  "keywords": [
    "cli",
    "migration",
    "nextjs",
    "tanstack-start",
    "framework",
    "migration-tool",
    "code-mod",
    "ast",
    "turborepo"
  ],
  "homepage": "https://github.com/Prathamesh-Chougale-17/hopr#readme",
  "bugs": {
    "url": "https://github.com/Prathamesh-Chougale-17/hopr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Prathamesh-Chougale-17/hopr.git",
    "directory": "apps/cli"
  },
  "license": "MIT",
  "author": "Your Name",
  "bin": {
    "hopr": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./detectors": "./dist/detectors/index.js",
    "./detectors/nextjs": "./dist/detectors/nextjs.js",
    "./transformers/package-transformer": "./dist/transformers/package-transformer.js",
    "./transformers/code-transformer": "./dist/transformers/code-transformer.js",
    "./utils/file-system": "./dist/utils/file-system.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsc",
    "postbuild": "node -e \"try{require('fs').chmodSync('dist/index.js',0o755)}catch(e){}\"",
    "start": "node dist/index.js",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@antfu/ni": "^0.23.2",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.5",
    "@babel/types": "^7.26.3",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.2",
    "prettier": "^3.4.2",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
