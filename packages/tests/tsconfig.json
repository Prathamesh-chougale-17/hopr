{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@cli/*": ["../cli/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
